<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <Button
                android:id="@+id/selesaikan"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_below="@id/endMobil"
                android:layout_marginTop="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/borderline"
                android:scaleType="fitXY"
                android:text="Selesai"
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/optionRapat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="4dp"
                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceMedium" />

            <CheckBox
                android:id="@+id/imageMobil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                android:background="@drawable/mobil_selector"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/mobilMobil"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageMobil"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/imageMobil"
                android:text="KIJANG INNOVA A 1120"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/keteranganMobil"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobilMobil"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@id/mobilMobil"
                android:text="Keterangan" />

            <TextView
                android:id="@+id/startMobil"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/mobilMobil"
                android:layout_below="@id/keteranganMobil"
                android:layout_centerVertical="true"
                android:layout_marginTop="32dp"
                android:text="Selasa, 18 September 18:00 s/d"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/endMobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/startMobil"
                android:layout_alignLeft="@id/mobilMobil"
                android:text="Rabu, 19 September 09:00" />

            <TextView
                android:id="@+id/textViewBatas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/selesaikan"
                android:layout_below="@id/imageMobil"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/selesaikan"
                android:text="Sudah melewati batas jam peminjaman!"
                android:textColor="@color/red"
                android:textStyle="bold|italic" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>