<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <ImageButton
                android:id="@+id/amDelete"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_alignLeft="@id/amProses"
                android:layout_marginLeft="8dp"
                android:background="@drawable/circular_button_red"
                android:padding="3dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/delete" />

            <ImageButton
                android:id="@+id/amProses"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/amWaktu"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:background="@drawable/circular_button"
                android:padding="6dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/execution" />

            <TextView
                android:id="@+id/amKeterangan"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Keterangan"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/amNama"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/amKeterangan"
                android:layout_below="@id/amKeterangan"
                android:text="Nama" />

            <TextView
                android:id="@+id/amFungsi"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/amKeterangan"
                android:layout_below="@id/amNama"
                android:text="Fungsi" />

            <TextView
                android:id="@+id/amWaktu"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/amKeterangan"
                android:layout_below="@id/amFungsi"
                android:text="Jam Peminjaman:" />

            <TextView
                android:id="@+id/textViewExpired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/amWaktu"
                android:layout_marginTop="8dp"
                android:text="Expired, akan dihapus oleh sistem secara otomatis"
                android:textColor="@color/red"
                android:visibility="gone" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>