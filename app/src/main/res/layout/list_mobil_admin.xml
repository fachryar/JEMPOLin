<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/mmEdit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/circular_button"
                android:padding="4dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/pencil" />

            <TextView
                android:id="@+id/textViewOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/mmSelesai"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/mmSelesai"
                android:layout_weight="1"
                android:text="Telah melebihi batas jam peminjaman!!!"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mmSelesai"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/mmNamaFungsi"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/borderline"
                android:scaleType="fitXY"
                android:text="Selesai"
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mmMobil"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="INNOVA"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mmKeterangan"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/mmMobil"
                android:layout_below="@id/mmMobil"
                android:text="Keterangan"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mmStart"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/mmMobil"
                android:layout_below="@id/mmKeterangan"
                android:text="Jam mulai"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mmEnd"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/mmMobil"
                android:layout_below="@id/mmStart"
                android:text="s/d Jam"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mmNamaFungsi"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/mmMobil"
                android:layout_below="@id/mmEnd"
                android:layout_marginTop="8dp"
                android:text="nama fungsi"
                android:textSize="13sp"
                android:textStyle="italic" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>