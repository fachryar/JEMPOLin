<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <TextView
                android:id="@+id/buOver"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/buWaktu"
                android:layout_marginTop="36dp"
                android:layout_weight="1"
                android:text="Telah melebihi batas jam peminjaman!!!"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buSelesai"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/buWaktu"
                android:layout_marginRight="8dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/borderline"
                android:scaleType="fitXY"
                android:text="Selesai"
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/buOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="4dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceMedium" />

            <CheckBox
                android:id="@+id/buStatus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/barang_selector"
                android:button="@null"
                android:checked="false"
                android:clickable="false"
                android:duplicateParentState="false"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/buNama"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/buStatus"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/buStatus"
                android:text="Nama Barang"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/buKeterangan"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/buNama"
                android:layout_below="@id/buNama"
                android:text="Keterangan"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/buWaktu"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/buNama"
                android:layout_below="@id/buKeterangan"
                android:layout_centerVertical="true"
                android:text="Jam Mulai"
                android:textSize="13sp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>