<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <CheckBox
            android:id="@+id/statusBox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:checked="false"
            android:clickable="false"
            android:background="@drawable/waiting_selector"
            android:button="@null"
            android:scaleType="fitXY"
            android:duplicateParentState="false" />

            <CheckBox
                android:id="@+id/statusBox2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:checked="false"
                android:clickable="false"
                android:layout_toLeftOf="@id/textKategori"
                android:background="@drawable/checked2"
                android:backgroundTint="@color/colorPrimary"
                android:button="@null"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:duplicateParentState="false" />

            <TextView
                android:id="@+id/textKategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:text="Test"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/textDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textKategori"
                android:layout_marginLeft="38dp"
                android:text="@string/lorem"
                android:textAppearance="?android:textAppearanceSmall" />

            <TextView
                android:id="@+id/textViewOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceMedium" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>