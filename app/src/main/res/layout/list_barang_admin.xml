<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <Button
                android:id="@+id/baDecline"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_below="@id/baFungsi"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/baVerify"
                android:background="@drawable/borderline_merah"
                android:scaleType="fitXY"
                android:text="Decline"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/baVerify"
                android:layout_width="56dp"
                android:layout_height="23dp"
                android:layout_below="@id/baFungsi"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/borderline"
                android:scaleType="fitXY"
                android:text="Verify"
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/baEdit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circular_button"
                android:padding="4dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/pencil" />

            <TextView
                android:id="@+id/baOver"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/baSelesai"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/baFungsi"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:text="Telah melebihi batas jam peminjaman!!!"
                android:textColor="@color/red"
                android:textSize="11sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/baSelesai"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/baFungsi"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/borderline"
                android:scaleType="fitXY"
                android:text="Selesai"
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/baNama"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Nama Barang"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/baKeterangan"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/baNama"
                android:text="Keterangan"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/baFungsi"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/baWaktu"
                android:text="nama - fungsi"
                android:textSize="13sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/baWaktu"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/baKeterangan"
                android:text="Jam"
                android:textSize="13sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>